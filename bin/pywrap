#!/usr/bin/env python

import argparse
import pywrap
import pywrap.cython as pycy


if __name__ == "__main__":
    argparser = argparse.ArgumentParser(description=pywrap.__description__)
    argparser.add_argument("header", type=str, help="C++ header file")
    argparser.add_argument("outdir", type=str, nargs="?", default=".",
                           help="output directory")
    argparser.add_argument("--verbose", "-v", action="count",
                           help="verbosity level")
    args = argparser.parse_args()

    pycy.write_cython_wrapper(args.header, args.outdir, args.verbose)
